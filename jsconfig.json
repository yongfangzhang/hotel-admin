{
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeAcquisition": {
    "exclude": [
      "adler-32",
      "cfb",
      "codepage",
      "crc-32"
    ]
  },
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  }
}